<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Café Alvorada</title>
    
    <link rel="stylesheet" href="~/css/clientes.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="~/css/estoque.css" />
    <link rel="stylesheet" href="~/css/licencas.css" />
    <link rel="stylesheet" href="~/css/pedidos.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav>
        <a asp-page="/Index">
            <img src="~/img/logo.png" alt="Logo Alvorada" />
        </a>

        <div class="nav-item">
            <img src="~/icons/pedidos.png" alt="Ícone Pedidos" />
            <span>
                <a asp-page="/Pedidos">Pedidos</a>
            </span>
        </div>

        <div class="nav-item">
            <img src="~/icons/clientes.png" alt="Ícone Clientes" />
            <span>
                <a asp-page="/Clientes">Clientes</a>
            </span>
        </div>

        <div class="nav-item">
            <img src="~/icons/estoque.png" alt="Ícone Estoque" />
            <span>
                <a asp-page="/Estoque">Estoque</a>
            </span>
        </div>

        <div class="nav-item">
            <img src="~/icons/licenca.png" alt="Ícone Licenças" />
            <span>
                <a asp-page="/Licencas">Licenças</a>
            </span>
        </div>

        <partial name="_LoginPartial" />
    </nav>

    <main role="main">
        @RenderBody()
    </main>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>